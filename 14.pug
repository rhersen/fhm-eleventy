html(lang="sv")
  head
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title 14 dagars fall per 100000
    style.
      .table {
        display: grid;
        grid-auto-flow: row;
        grid-template-columns: max-content repeat(22, 1fr);
      }

      .region {
        overflow: hidden;
      }
      .cell {
        font-family: sans-serif;
        color: white;
        overflow: hidden;
        text-align: center;
      }
  body
    .table
      span Statistikdatum
      each region in fhm.cases.columns
        span.region= region
      each cellArray, index in fhm.cases.cells14
        span= fhm.cases.rows[index]
        each cell in cellArray
          span.cell(style='background-color:' + cell.bgcolor)= Math.round(cell.value)
