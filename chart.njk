<!doctype html>
<html lang="sv">
<head>
    <title>
        diagram över 7 dagars rullande medelvärde per miljon
    </title>
    <style>
        .chart {
            display: grid;
            grid-template-columns: max-content auto;
        }

        .chart .y-values {
            grid-column: 2;
            display: flex;
            flex-direction: column-reverse;
            justify-content: space-evenly;
            margin: 12px;
        }

        .chart svg {
            grid-column: 1;
            height: 600px;
            border: black 2px solid;
        }

        polyline {
            stroke-width: 3px;
            stroke: red;
        }

        .chart line {
            stroke: #bbb;
            stroke-width: 1;
        }
    </style>
</head>
<body>
<div class="chart">
    <svg viewBox="0 0 {{ fhm.cases.chart.width }} {{ fhm.cases.chart.height }}">
        {% for i in range(1, fhm.cases.chart.max / 100) %}
            <line x1="0" y1={{ 100 * i * fhm.cases.chart.height / fhm.cases.chart.max }} x2={{ fhm.cases.chart.width }}
                  y2={{ 100 * i * fhm.cases.chart.height / fhm.cases.chart.max }}></line>
        {% endfor %}
        <polyline fill="none" points={{ fhm.cases.chart.points }}/>
    </svg>
    <div class="y-values">
        {% for i in range(1, fhm.cases.chart.max / 100) %}
            <div class="y-value">
                {{ i * 100 }}
            </div>
        {% endfor %}
    </div>
</div>
</body>
</html>
